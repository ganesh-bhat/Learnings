<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:text="HDFC Bank"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:paddingTop="4dp"
        android:text="Bank"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/content_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingTop="16dp"
        android:text="Count 12"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/mark_as_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mark_as_favorite_black"
        android:layout_below="@id/content_count"
        android:layout_alignParentRight="true"
        />


    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_subtitle"
        style="@style/TagGroup" />


</RelativeLayout>