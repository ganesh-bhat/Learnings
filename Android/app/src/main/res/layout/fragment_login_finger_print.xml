<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#0099cc"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fingerprint_timeout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:paddingTop="30dp"
        android:text="Login"
        android:textColor="#33b5e5"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/finger_print_message"
        android:layout_marginTop="14dp"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fingerprint_timeout_title"
        android:layout_centerHorizontal="true"
        android:text="Use finger print within 15 seconds to login again, else its mandatory to use the password to login" />

    <ImageView
        android:id="@+id/fingerprint_image"
        android:layout_below="@id/finger_print_message"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/ic_fingerprint_black_24dp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprint_image"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/done_password_setup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />

        <Button
            android:id="@+id/cancel_setup_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done" />

    </LinearLayout>




</RelativeLayout>