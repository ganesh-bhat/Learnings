<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/vault_item_type_et"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Item type"
            android:inputType="textAutoComplete|textAutoCorrect|textCapWords" />

        <EditText
            android:id="@+id/vault_item_value_et"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vault_item_type_et"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Item value"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/generate_phrase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_generate"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
